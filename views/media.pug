extends layout

block content
  .container
    h1 #{media.title}
    img(src=media.poster, alt='poster')
    h4 Release Date: #{media.release_date}
    h4 Summary: #{media.description}
    h4 rating: #{media.rating}

    if media.directors && media.directors.length > 0
      h4 directors
      ul
        each director in media.directors
          li= director


    if media.genres && media.genres.length > 0
      h4 Genres
      ul
        each genre in media.genres
          li= genre


    br
    h3 Watching Status

    if status != 'watched'
      a(href = `/media/${media._id}/add/watched`) Watched 
    else
      p Watched
    br
    if status != 'watching'
      a(href = `/media/${media._id}/add/watching`) Watching 
    else 
      p Watching
    br
    if status != 'plantowatch'
      a(href= `/media/${media._id}/add/plantowatch`) Plan To Watch
    else 
      p Plan To Watch
    br
    if status != null
      a(href= `/media/${media._id}/remove`) Remove
    br
